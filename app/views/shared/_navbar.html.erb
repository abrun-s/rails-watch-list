<div class="navbar">
  <p>
    <%= link_to 'Back to Lists', lists_path, class: 'btn-light opacity-50 text-decoration-none' %>
  </p>
  <% if @list.present? %>
    <h1 class="h1"><%= @list.name %></h1>
  <%else%>
    <h1 class="h1">Home</h1>
  <%end%>
  <%# # if on lists index page show create new list button else show add to list button %>
  <% if current_page?(lists_path)%>
    <h1>
      <%= link_to "Add Watch List", new_list_path, class: 'btn-danger text-decoration-none'  %>
    </h1>
  <%elsif @list.present?%>
    <h1>
      <%= link_to "Add to #{@list.name} list", new_list_path(@list), class: 'btn-danger text-decoration-none' %>
    </h1>
  <%end%>
</div>
